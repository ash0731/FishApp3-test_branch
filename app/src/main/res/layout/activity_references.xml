<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".References">

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_marginTop="85dp"
                android:text="REFERENCES"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="19dp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:layout_marginTop="85dp"
                android:text="(Information/Data)"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:layout_marginTop="85dp"
                android:text="BFAR 4A - Provincial Fisheries Office Cavite (PFO-Cavite) \nFood and Agriculture Organization (FAO)\nProvincial Agriculture Office - Trece Martirez City"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:text="(Images/Videos)"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"

                android:layout_marginTop="85dp"
                android:autoLink="web"
                android:textColorLink="@android:color/holo_blue_dark"
                android:text="In assistance with Provincial Fisheries Office in Cavite (PFO - Cavite) \n \nFood and Agriculture Organization Website. \n http://www.fao.org\n\n National Oceanic and Atmospheric Administration\nhttps://www.noaa.gov/\n\nVictor Pellet Mill\nhttp://wwww.victorpelletmill.com" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>