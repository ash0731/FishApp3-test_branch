<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wavebg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpeciesActivity">


    <Button
        android:id="@+id/button1"
        android:textColor="@android:color/white"
        android:backgroundTint="#039BE5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:drawableLeft="@drawable/bangusicon"
        android:text="Milkfish (Bangus)" />

    <Button
        android:id="@+id/button2"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#039BE5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:drawableLeft="@drawable/tilapiaicon"
        android:text="Tilapia" />

    <Button
        android:id="@+id/button3"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#0288D1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:drawableLeft="@drawable/crabicon"
        android:text="Mud Crab (Alimango)"/>

    <Button
        android:id="@+id/button4"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#0277BD"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:drawableLeft="@drawable/prawnicon"
        android:text="Tiger Prawn (Sugpo)"/>

    <Button
        android:id="@+id/button5"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#0277BD"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:drawableLeft="@drawable/musselicon"
        android:text="Green Mussel (Tahong)"/>
</LinearLayout>