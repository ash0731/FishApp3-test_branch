<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:background="#0277BD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cvsu.ash.rhea.fishapp.LearnActivity">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:textColor="@android:color/white"
            android:backgroundTint="#0277BD"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/species"
            android:scaleType="fitXY"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Species" />

        <Button
            android:id="@+id/button2"
            android:textColor="@android:color/white"
            android:backgroundTint="#0277BD"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/feeds"
            android:scaleType="fitXY"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Fish Feeds"/>

        <Button
            android:id="@+id/button3"
            android:textColor="@android:color/white"
            android:backgroundTint="#0277BD"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/history"
            android:scaleType="fitXY"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Aquaculture History"
          />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textColor="@android:color/white"

        android:layout_height="match_parent"
        android:textSize="24sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button4"

        android:textColor="@android:color/white"
        android:backgroundTint="#0277BD"
        android:layout_width="match_parent"
            android:drawableTop="@drawable/tools"
        android:layout_height="0dp"
        android:layout_weight="1"
            android:textSize="16sp"
        android:text="Tools and equipments" />



        <Button
            android:id="@+id/button5"

            android:textColor="@android:color/white"
            android:backgroundTint="#0277BD"

            android:layout_width="match_parent"
            android:drawableTop="@drawable/methods"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="culturing methods" />

        <Button
            android:id="@+id/button6"

            android:textColor="@android:color/white"
            android:backgroundTint="#0277BD"

            android:layout_width="match_parent"
            android:drawableTop="@drawable/ethics"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Aquaculture rules and ethics"
            />
    </LinearLayout>
</LinearLayout>
